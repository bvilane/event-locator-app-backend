  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^6.1.5",
    "i18next": "^22.4.15",
    "i18next-http-middleware": "^3.7.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.1.0",
    "morgan": "^1.10.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "eslint": "^8.39.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
